@using Chinook.Helpers;
@using Chinook.Common;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Chinook</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span>Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            @if (userPlaylists != null && userPlaylists.Any() && currentUserId != null)
            {
                foreach (var playList in userPlaylists)
                {
                    if (playList != null && playList.Playlist != null)
                    {
                        var playlistName = PlaylistHelper.GetVisibleFavoritePlaylistName(playList.Playlist.Name, currentUserId);

                        <NavLink class="nav-link" href="@string.Format("playlist/{0}",playList.PlaylistId)">
                            <i class="bi bi-music-note-list me-3" style="font-size: 1.25em"></i>@playlistName
                        </NavLink>
                    }                    
                }
            }
        </div>

    </nav>
</div>
